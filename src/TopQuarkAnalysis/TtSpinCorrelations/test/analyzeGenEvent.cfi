module analyzeGenEvent = AnalyzeGenEvent {

  # output file
  string outputFilePath = "analyzeGenEvent.root"

  # input TtGenEvent that contains the top decay chains and the initial partons
  InputTag srcGenEvent = genEvt

  # choose reference bases
  bool useHelicityBasis       = true
  bool useInitialPartonsBasis = false // not implemented yet (not IR-safe anyway)
  bool useBeamBasis           = true
  bool useOffDiagonalBasis    = true
  bool useOptimalBasis        = false // not implemented yet

  # split sample into analysis/reference sample
  double splitTtValue        =  50.  // split value at:
                                     // - splitTtMassAbsolute = true
                                     //   sample split for tt mass at this value
                                     // - splitTtMassAbsolute = false
                                     //   sample split such, that this value gives percentage of events in analysis sample
  bool   splitTtMassAbsolute = false // false splits by percentag of number of events
  
  # histogram fitting
  bool fitHistos = true

  # tree & histogram settings
  int32  binsTtMass     =   66
  double xMinTtMass     =  350.
  double xMaxTtMass     = 2000.
  int32  binsCosAngle1D =   25
  int32  binsCosAngle2D =    9
  
  # spin analyzer qualities (CMS NOTE 2006/111)
  double kappaLplus =  1.   // \
  double kappaDbar  =  1.   // | identical in SM
  double kappaSbar  =  1.   // /
  double kappaNu    = -0.31 // \
  double kappaU     = -0.31 // | identical in SM
  double kappaC     = -0.31 // /
  double kappaB     = -0.41
  double kappaW     =  0.41
  double kappaQ     =  0.51
}
